<Window x:Class="iFIlterText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iFIlterText"
        mc:Ignorable="d"
        Title="iFilter Text Reader" Height="350" Width="525">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" x:Name="OpenButton" Content="Open File" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="OpenButton_Click" Margin="8"/>
        <ScrollViewer Name="contentScrollViewer">
            <TextBox x:Name="readerTextbox" Margin="12,12,12,12" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Text retrieved is shown here." IsReadOnly="True" HorizontalContentAlignment="Stretch" BorderBrush="{x:Null}"/>
        </ScrollViewer>
    </DockPanel>
</Window>
